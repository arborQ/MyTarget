.card
  .card-block
    h4.card-title Edit {{ ctr.originModel.name }}
    fieldset(ng-form="editUser")
      .form-group
        label(for="name") Name
        input(type="text", class="form-control", id="name", name="name", ng-maxlength="10", ng-required="true" ng-model="ctr.model.name")
        small.text-muted All can see this name
        div(ng-messages="editUser.name.$error")
          span.label.label-danger(ng-message="required") Required
          span.label.label-danger(ng-message="maxlength") To long
      .form-group
        label(for="email") Email
        input(type="email", class="form-control", id="email", name="email", ng-required="true", ng-maxlength="30", ng-model="ctr.model.email")
        small.text-muted We'll never share your email with anyone else.
        div(ng-messages="editUser.email.$error")
          span.label.label-danger(ng-message="required") Required
          span.label.label-danger(ng-message="email") Not email?
          span.label.label-danger(ng-message="maxlength") To long
    div.btn-group
      button.btn.btn-primary(ng-disabled="!(editUser | allowSave:ctr.model:ctr.originModel)") Save
      a.btn.btn-warning(ui-sref="^") Cancel
